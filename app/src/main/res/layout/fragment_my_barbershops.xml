<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:background="@drawable/top_bottom_clear"
        android:id="@+id/my_barbershops_text"
        android:layout_height="wrap_content">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:text="@string/my_barber_shops"
        android:textSize="30sp"

        android:textAllCaps="true"
        android:padding="5dp"
        android:textColor="@color/YellowApp"
        android:layout_marginStart="20dp"
        android:fontFamily="@font/agency"
        />
    </LinearLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/my_barbershops_text"
        android:id="@+id/my_barbershops_recycler"/>

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:src="@drawable/ic_baseline_add_black24"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="20dp"
        android:id="@+id/add_button"/>

</RelativeLayout>