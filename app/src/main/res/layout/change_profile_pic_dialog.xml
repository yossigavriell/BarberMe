<?xml version="1.0" encoding="utf-8"?>
<LinearLayout

    android:layout_width="350dp"
    android:layout_height="500dp"
    android:layout_gravity="center"
    android:background="@drawable/black_transient"
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

    <ImageView
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:id="@+id/profile_pic_image_view"
        android:layout_gravity="center"
        android:layout_marginTop="15dp"/>

    <Button
        android:layout_marginTop="20dp"
        android:fontFamily="@font/assistant_regular"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginHorizontal="100dp"
        android:text="@string/edit_profile_picture"
        android:background="@drawable/shape_selector_yellowapp"
        android:textAllCaps="true"
        android:id="@+id/edit_profile_pic_btn"/>

    <Button
        android:layout_marginBottom="10dp"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="@drawable/shape_selector_yellowapp"
        android:layout_marginTop="20dp"
        android:text="@string/save_changes"
        android:fontFamily="@font/assistant_regular"
        android:id="@+id/save_profile_pic_changes_btn"
        android:layout_marginHorizontal="100dp"
        android:textAllCaps="true"/>
    </LinearLayout>

</LinearLayout>